{
    "manifest_version": 2,
    "name": "Steamify - Faceit stats checker",
    "description": "Allows you to view additional information about account on faceit platform.",
    "version": "1.0.2",
    "icons":
    {
        "16": "images/icon/16.png",
        "32": "images/icon/32.png",
        "64": "images/icon/64.png",
        "128": "images/icon/128.png"
    },
    "permissions": [
        "tabs"
    ],
    "web_accessible_resources": [
        "images/lvl_1.svg",
        "images/lvl_2.svg",
        "images/lvl_3.svg",
        "images/lvl_4.svg",
        "images/lvl_5.svg",
        "images/lvl_6.svg",
        "images/lvl_7.svg",
        "images/lvl_8.svg",
        "images/lvl_9.svg",
        "images/lvl_10.svg"
    ],
    "content_scripts": [
    {
        "matches": [
            "https://steamcommunity.com/id/*",
            "https://steamcommunity.com/profiles/*"
        ],
        "js": [
            "js/jquery.js",
            "js/content.js"
        ],
        "css": [
            "css/style.css"
        ]
    }],
    "background":
    {
        "scripts": ["js/background.js"]
    },
    "browser_action": {
        "default_icon": "images/icon/128.png",
        "default_title": "Click here to check Faceit stats"
    }
}